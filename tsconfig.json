{
  "compilerOptions": {
    "target": "es2020",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "outDir": "build",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": [
      "jest"
    ],
    "moduleResolution": "node16",
    "module": "node16"
  },
  "exclude": [
    "node_modules/"
  ],
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ]
}